<!--pages/companyShareholder/companyShareholder.wxml-->
<view id='blank'></view>
<view id='head' bindtap='addShareholder' data-value='+'>公司股东<view class='img' style='background-image: url({{addShareholderIcon}});'></view></view>
<view class='shareholderList' >
    <view class='slicerLine'></view>
    <view class='shareholder'><view class='img' style='background:red'>
    </view><view class='shareholderName'>张三</view></view>
</view>
<view id='form'>
    <view>
        <view class='title'>股东1姓名：</view>
       <view class='saveInput'><input type='text' placeholder="请输入股东姓名" placeholder-class='pcss'></input>
       </view>
    </view>
     <view>
        <view class='title'>股东1电话：</view>
       <view class='saveInput'><input type='text' placeholder="请输入股东手机" placeholder-class='pcss'></input>
       </view>
    </view>
     <view>
        <view class='title'>股东1邮箱：</view>
       <view class='saveInput'><input type='text' placeholder="请输入股东邮箱" placeholder-class='pcss'></input>
       </view>
    </view>
     <view class='proportion'>
        <view class='title' >股东1比例：</view>
       <view class='saveInput'><input type='text' placeholder="请输入股东占股比例" placeholder-class='pcss'></input>
       <view class='percent'>%</view>
       </view>
    </view>
     <view>
        <view class='title'>股东1证件号码：</view>
       <view class='saveInput'><input type='text' placeholder="请输入股东身份证号" placeholder-class='pcss'></input>
       </view>
    </view>
    <view id='IDPhone'>
       <view id='frontPhone' bindtap='uploadingImg1'>
           <view>股东身份证——正面</view>
           
              <image src='{{img1}}'></image>
              <icon type='clear' class='deleteImg1' style='display:{{deleteImg1}}' catchtap='deleteImg1' ></icon>
       </view>
       <view id='contraryPhone' bindtap='uploadingImg2'>
           <view>股东身份证——反面</view>
           <image src='{{img2}}'></image>
           <icon type='clear' class='deleteImg2' style='display:{{deleteImg2}}' catchtap='deleteImg2' ></icon>
       </view>       
    </view>

    <view class='foot'>
       <button id='submit'>完成</button>
    </view>
</view>

